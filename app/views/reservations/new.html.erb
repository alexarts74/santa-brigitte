<div class="container">
  <h1>Contattateci</h1>

  <%= form_with scope: :reservation, url: reservations_path, method: :post, local: true, class: "container" do |form| %>
    <div class="form-group">
      <%= form.label :name %>
      <%= form.text_field :name, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= form.label :lastname %>
      <%= form.text_field :lastname, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= form.label :email %>
      <%= form.email_field :email, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= form.label :message %>
      <%= form.text_area :message, class: "form-control" %>
    </div>
    <%= form.submit "Submit", class: "btn btn-primary" %>
  <% end %>

</div>


